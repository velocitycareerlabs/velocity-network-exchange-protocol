{
  "title": "credential-manifest",
  "type": "object",
  "properties": {
    "issuer": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string"
        }
      }
    },
    "output_descriptors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "schema": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "uri": {
                  "type": "string",
                  "format": "uri"
                },
                "type": {
                  "type": "string"
                },
                "display": {
                  "type": "object"
                }
              },
              "required": [
                "uri",
                "type"
              ]
            }
          }
        },
        "required": [
          "schema"
        ]
      }
    },
    "presentation_definition": {
      "$ref": "./presentation-definition.v1.json"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "client_name": {
          "type": "string",
          "description": "name of the client"
        },
        "logo_uri": {
          "type": "string",
          "description": "URI to the logo for the company",
          "format": "uri"
        },
        "tos_uri": {
          "type": "string",
          "description": "URL to the terms of disclosure",
          "format": "uri"
        },
        "max_retention_period": {
          "type": "string",
          "description": "should be an ISO 8601 encoded duration"
        },
        "submit_presentation_uri": {
          "type": "string"
        },
        "progress_uri": {
          "type": "string"
        },
        "check_offers_uri": {
          "type": "string"
        },
        "finalize_offers_uri": {
          "type": "string"
        }
      },
      "required": [
        "client_name",
        "logo_uri",
        "tos_uri",
        "max_retention_period",
        "submit_presentation_uri",
        "progress_uri"
      ]
    },
    "exchange_id": {
      "type": "string"
    }
  },
  "required": [
    "issuer",
    "output_descriptor"
  ]
}